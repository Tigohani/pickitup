<div class="row">
  <div class="card">
    <% if @profile.image.present? %>
      <%= image_tag @profile.image_url(:medium) %>
    <% else %>
      <%= image_tag "noimage.jpeg" %>
    <% end%>
    <div class="person_info">
      <h4><b><%= @profile.full_name %></b></h4> 
      <p><%= @profile.city %></p> 
    </div>
  </div>  
  
  <!-- end of card -->

<!-- kon's cards -->
  <% @services.each do |service| %>

    <div class="container">
        
        <div class="card">

            <div class="image">
                <% if service.image.present? %>
                    <%= image_tag service.image_url(:original) %>
                <% else %>
                    no image
                <% end%>
            </div>

            <div class="text">
                <%= link_to(service) do %>
                  <div class="fab">&#43;</div>
                <% end %>
                <h3><%= service.title %></h3>
                 </br>
                <p><%= service.description %></p>
                </br>

            </div>

        </div>
   
    </div>

<% end %>

<!-- end of kon -->